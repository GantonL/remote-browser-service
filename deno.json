{
  "lint": {
    "rules": {
      "exclude": ["require-await"]
    }
  },
  "fmt": {
    "options": {
      "singleQuote": true
    }
  },
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "imports": {
    "@danet/core": "jsr:@danet/core@2",
    "@std/dotenv": "jsr:@std/dotenv@^0.225.3",
    "@danet/swagger": "jsr:@danet/swagger@2",
    "@std/assert": "jsr:@std/assert@1.0.6",
    "@std/testing": "jsr:@std/testing@1.0.3",
    "puppeteer": "npm:puppeteer@23.11.1"
  },
  "tasks": {
    "launch-server": "deno run --allow-net --allow-read --allow-write --allow-run --allow-env --allow-ffi --allow-sys --unstable run.ts",
    "test": "deno test -A --unstable spec"
  },
  "nodeModulesDir": "auto",
  "allowScripts": {
    "allow": [],
    "deny": ["npm:puppeteer@23.11.1"]
  }
}
